{
    "name": "affinity4/thistle",
    "description": "Thistle is an MVC framework built on Silex and with some custom service providers",
    "license": "GPLv3",
    "authors": [
        {
            "name": "Luke Watts",
            "email": "luke@affinity4.ie"
        }
    ],
    "autoload": {
        "psr-4": {
            "Thistle\\App\\Controller\\": "app/controllers/",
            "Thistle\\App\\Model\\": "app/models/",
            "Thistle\\App\\Provider\\": "app/providers/",
            "Thistle\\App\\Core\\Provider\\": "app/core/providers/",
            "Thistle\\Test\\": "tests/"
        }
    },
    "require": {
        "silex/silex": "^1.3",
        "symfony/doctrine-bridge": "^3.1",
        "doctrine/orm": "^2.5",
        "symfony/monolog-bridge": "^3.1",
        "monolog/monolog": "^1.19",
        "symfony/twig-bridge": "^3.1",
        "twig/twig": "^1.24",
        "symfony/filesystem": "^3.1",
        "symfony/console": "^3.1",
        "symfony/form": "^3.1",
        "symfony/asset": "^3.1",
        "symfony/finder": "^3.1",
        "swiftmailer/swiftmailer": "^5.4",
        "phpunit/phpunit": "^5.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.1",
        "filp/whoops": "^2.1"
    }
}
